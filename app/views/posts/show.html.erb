<section class="section">
  <h2>投稿詳細</h2>
  <table class="table">
    <thead class="post-index">
      <th>投稿者</th>
      <th>画像</th>
      <th>空港名</th>
      <th>都道府県</th>
      <th>市名</th>
      <th>コメント</th>
    </thead>
    <tbody class="post-info">
        <tr>
          <td>
            <%= link_to user_path(@post.user), class:"user" do %>
              <figure class="image is-48x48 mb-3">
                <%= image_tag avatar_url(@post.user), class: "is-rounded" %>
              </figure>
              <%= @post.user.full_name %>
            <% end %>
          </td>
          <td><%= image_tag @post.image[0] %></td>
          <td><%= @post.airport_name %></td>
          <td><%= @post.prefecture %></td>
          <td><%= @post.city %></td>
          <td><%= @post.impression %></td>
        </tr>
    </tbody>
  </table>
  <h2>コメントする</h2>
  <%= form_with (model:[@post, @comment], method: :post, local: true) do |f| %>
    <div class="post">
      <%= f.text_area :content %>
      <%= f.hidden_field :post_id, value: @post.id %>
    </div>
    <div class="post">
      <%= f.submit "コメントする", class: "post-button" %>
    </div>
  <% end %>
  <h2>コメント一覧</h2>
  <table class="table">
    <thead class="post-index">
      <th>コメント投稿者</th>
      <th>コメント内容</th>
    </thead> 
    <tbody class="post-info">
      <%= @comments.each do |comment| %>
        <tr>
          <td>
            <%= link_to user_path(comment.user), class:"user" do %>
              <figure class="image is-48x48 mb-3">
                <%= image_tag avatar_url(comment.user), class: "is-rounded" %>
              </figure>
              <%= comment.user.full_name %>
            <% end %>
          </td>
          <td><%= comment.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
  <%= link_to  "トップページに戻る", root_path, class: "button is-info is-light is-fullwidth mt-6 mb-6" %>
</section>
