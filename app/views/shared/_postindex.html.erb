<section class="section">
  <h2>一部投稿一覧</h2>
  <table class="table">
    <thead class="post-index">
      <th>投稿者</th>
      <th>画像</th>
      <th>空港名</th>
      <th>都道府県</th>
      <th>市名</th>
      <th>コメント</th>
      <th>空港の詳細</th>
    </thead>
    <tbody class="post-info">
      <% @posts.limit(3).each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(post.user), class:"user" do %>
              <figure class="image is-48x48 mb-3">
                <%= image_tag avatar_url(post.user), class: "is-rounded" %>
              </figure>
              <%= post.user.full_name %>
            <% end %>
          </td>
          <td><%= image_tag post.image[0] %></td>
          <td><%= post.airport_name %></td>
          <td><%= post.prefecture %></td>
          <td><%= post.city %></td>
          <td><%= post.impression %></td>
          <td><%= link_to '空港の詳細', post_path(post.id) %><td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to  "全投稿一覧", posts_allindex_path, class: "button is-info is-rounded is-fullwidth mt-6" %>
</section>
